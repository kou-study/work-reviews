<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center" width="20%">user</th>
      <th class="text-center" width="20%">評価</th>
      <th class="text-center" width="60%">内容</th>
    </tr>
  </thead>
  
  <tbody>
    <% posts.each do |posting| %>
      <tr>
        <td class="text-center">
          <%= posting.user.name %>さん
        </td>
        <td class="text-center">
          <%= posting.evaluation %>
        </td>
        <td>
          <%= posting.content %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>